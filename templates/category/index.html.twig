{% for category in categories %}
        <tr> 
            <td>{{ category.name }}</td>
            <td> <a href="{{ path('category_edit', {'id': category.id}) }}" >Edit</a></td>
            <td>
                <form method="POST" action="{{ path('category_delete', {'id':category.id}) }}"
